---
import LoginForm from '../components/LoginForm';
import AppIcon from '../icons/AppIcon.astro';
import '../styles/Header.css';
import '../functions/download';
---

<nav>
  <div class="logo">
    <AppIcon />
    <span class="logo-text">Vortex PDF</span>
  </div>
  
  <div class="menu-toggle">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <div class="nav-links">
    <a href="#home" class="nav-link">Home</a>
    <a href="#downloads" class="nav-link">Downloads</a>
    <a href="#about" class="nav-link">About</a>
    <button class="login-btn">Login</button>
  </div>
</nav>

<LoginForm />

<div id="home" class="hero">
  <h1>Download your Web Pages as PDF's</h1>
  <p>After registering with Vortex you will be able to enter the URL of your website and download it as a PDF.</p>
  <div class="search-container">
    <input type="text" class="search-input" id="url-input" placeholder="Enter your URL to get started...">
    <button class="search-btn" id="button-download">DOWNLOAD</button>
  </div>
  <div class="progress-container">
    <div class="progress-bar">
      <div class="progress-fill"></div>
    </div>
    <div class="progress-text">Downloading files...</div>
  </div>
</div>